        <van-row>
            <van-col span='5'>
                <van-image round width="3rem" height="3rem" fit="cover" src="https://img.yzcdn.cn/vant/cat.jpeg" />
            </van-col>
            <van-col span='19'>
                <view>
                    <text>李天霸</text>
                    <van-tag round type="warning" style="margin-left: 10px"><span class="tag-text-style">认证行员</span></van-tag>
